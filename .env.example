# ============================================
# CONFIGURAÇÕES DE BANCO DE DADOS (OBRIGATÓRIAS)
# ============================================
# URL de conexão com o banco PostgreSQL
# Para Docker: jdbc:postgresql://db:5432/sisreserva?currentSchema=dev
# Para local: jdbc:postgresql://localhost:5432/sisreserva?currentSchema=dev
SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/sisreserva?currentSchema=dev

# Usuário do banco de dados
SPRING_DATASOURCE_USERNAME=postgres

# Senha do banco de dados
SPRING_DATASOURCE_PASSWORD=admin

# Nome do banco (usado pelo container PostgreSQL)
POSTGRES_DB=sisreserva

# ============================================
# CONFIGURAÇÕES DO SERVIDOR (OBRIGATÓRIAS)
# ============================================
# Porta onde a API será executada
SERVER_PORT=8080

# ============================================
# SEGURANÇA - JWT E TOKENS (OBRIGATÓRIAS)
# ============================================
# IMPORTANTE: Use secrets fortes e únicos em produção!
# Recomendação: Gere strings aleatórias de 64+ caracteres
API_SECURITY_TOKEN_SECRET=123456
API_SECURITY_ACCESS_SECRET=123456
API_SECURITY_REFRESH_SECRET=123456

# ============================================
# CORS - ORIGENS PERMITIDAS (OBRIGATÓRIA)
# ============================================
# URLs permitidas para requisições cross-origin
# Desenvolvimento: http://localhost:3000
# Teste: https://sisreserva-teste.uece.br
# Produção: https://sisreserva.uece.br
# Múltiplas origens: http://localhost:3000,https://sisreserva-teste.uece.br
CORS_ALLOWED_ORIGINS=http://localhost:3000

# ============================================
# CONFIGURAÇÕES DE E-MAIL SMTP (OBRIGATÓRIAS)
# ============================================
# Servidor SMTP (ex: smtp.gmail.com, smtp.office365.com)
SPRING_MAIL_HOST=smtp.gmail.com

# Porta SMTP (587 para TLS, 465 para SSL)
SPRING_MAIL_PORT=587

# Endereço de e-mail usado para envio
SPRING_MAIL_USERNAME=andredev.invasao@gmail.com

# Senha do e-mail ou App Password (recomendado para Gmail)
SPRING_MAIL_PASSWORD=ceuxqdpkkaygfmzl

# Habilitar autenticação SMTP
SPRING_MAIL_PROPERTIES_MAIL_SMTP_AUTH=true

# Habilitar STARTTLS (criptografia)
SPRING_MAIL_PROPERTIES_MAIL_SMTP_STARTTLS_ENABLE=true

